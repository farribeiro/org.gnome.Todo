{
    "app-id" : "org.gnome.Todo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "branch": "stable",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-todo",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--system-talk-name=org.freedesktop.login1",
        "--talk-name=org.gnome.OnlineAccounts",
        "--talk-name=org.gnome.evolution.dataserver.AddressBook9",
        "--talk-name=org.gnome.evolution.dataserver.Calendar8",
        "--talk-name=org.gnome.evolution.dataserver.Sources5",
        "--talk-name=org.gnome.evolution.dataserver.Subprocess.Backend.*",
        "--filesystem=home",
        "--metadata=X-DConf=migrate-path=/org/gnome/todo/"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "gnome-online-accounts",
            "config-opts" : [
                "--disable-documentation",
                "--disable-backend"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gnome-online-accounts/3.38/gnome-online-accounts-3.38.1.tar.xz",
                    "sha256" : "e18889d67806da84d1261bfed1cf61d2baec131d2d0d0a92f83ff33d4649358e"
                }
            ]
        },
        {
            "name" : "libical",
            "cleanup" : [
                "/lib/cmake"
            ],
            "buildsystem" : "cmake",
            "config-opts" : [
                "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib",
                "-DBUILD_SHARED_LIBS:BOOL=ON"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/libical/libical/releases/download/v3.0.9/libical-3.0.9.tar.gz",
                    "sha256" : "bd26d98b7fcb2eb0cd5461747bbb02024ebe38e293ca53a7dfdcb2505265a728"
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name" : "evolution-data-server",
            "cleanup" : [
                "/lib/cmake",
                "/lib/evolution-data-server/*-backends",
                "/libexec",
                "/share/dbus-1/services"
            ],
            "config-opts" : [
                "-DENABLE_GTK=ON",
                "-DENABLE_GOOGLE=OFF",
                "-DENABLE_VALA_BINDINGS=OFF",
                "-DENABLE_WEATHER=OFF",
                "-DWITH_OPENLDAP=OFF",
                "-DENABLE_INTROSPECTION=OFF",
                "-DENABLE_INSTALLED_TESTS=OFF",
                "-DENABLE_GTK_DOC=OFF",
                "-DENABLE_EXAMPLES=OFF",
                "-DWITH_LIBDB=OFF",
                "-DENABLE_CANBERRA=OFF"
            ],
            "buildsystem" : "cmake",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/evolution-data-server/3.40/evolution-data-server-3.40.0.tar.xz",
                    "sha256" : "ed572f0cb6a2365809943449a8ccbee652681e2d9a1a7f4a54b60cbb53d87445"
                }
            ]
        },
        {
            "name" : "libpeas",
            "buildsystem": "meson",
            "config-opts": ["-Dgtk_doc=false"],
            "cleanup" : [
                "/bin/*",
                "/lib/peas-demo"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/libpeas/1.30/libpeas-1.30.0.tar.xz",
                    "sha256" : "0bf5562e9bfc0382a9dcb81f64340787542568762a3a367d9d90f6185898b9a3"
                }
            ]
        },
        {
            "name" : "rest",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/rest/0.8/rest-0.8.1.tar.xz",
                    "sha256" : "0513aad38e5d3cedd4ae3c551634e3be1b9baaa79775e53b2dba9456f15b01c9"
                }
            ]
        },
        {
            "name" : "gnome-todo",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gnome-todo/3.28/gnome-todo-3.28.1.tar.xz",
                    "sha256" : "c7571fc040d8901dd0e528282ef0655687f23f29d304057c72548ab3e2c2cf23"
                },
                {
                    "type": "patch",
                    "path": "gnome-todo-eds-libecal-2.0.patch"
                },
                {
                    "type": "patch",
                    "path": "appdata-xml.patch"
                }
            ]
        }
    ]
}
